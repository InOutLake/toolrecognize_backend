# App
APP_PORT=8000
PYTHONUNBUFFERED=1

# Celery
CELERY_APP=main:celery_app
CELERY_LOGLEVEL=info
CELERY_CONCURRENCY=1
WORKER_COUNT=2

# Database
POSTGRES_DB=toolrecognize
POSTGRES_USER=tooluser
POSTGRES_PASSWORD=toolpass
POSTGRES_PORT=5432
DATABASE_URL=postgresql+psycopg://tooluser:toolpass@postgres:5432/toolrecognize

# RabbitMQ
RABBITMQ_DEFAULT_USER=guest
RABBITMQ_DEFAULT_PASS=guest
RABBITMQ_PORT=5672
RABBITMQ_MANAGEMENT_PORT=15672

# Broker/Result URLs for Celery
CELERY_BROKER_URL=amqp://guest:guest@rabbitmq:5672//
CELERY_RESULT_BACKEND=rpc://
